#-------------------------------
# fzf
#-------------------------------
cdf() {
   cd ~
   local file
   local dir
   file=$(fzf +m -q "$1") && dir=$(dirname "$file") 
   cd "$dir"
   pwd
}


# Interactively select history and run selected command
fh() {
  set -o history
  HISTFILE=~/.bash_history
  
  local cmd
  # Optimization: 
  # 1. 'tac' reverses the history so newest items are first
  # 2. 'sed' removes the line numbers
  # 3. 'awk' keeps ONLY the first occurrence it sees (which is the newest)
  # 4. 'fzf' handles the search
  cmd=$(history | tac | sed 's/^[[:space:]]*[0-9]\+[[:space:]]*//' | awk '!seen[$0]++' | fzf --height=80% --border --prompt='History> ' --bind='tab:down,shift-tab:up')

  if [[ -n "$cmd" ]]; then
    echo "$cmd"
  fi
}


helpfzf() {
  local cmd="$1"
  [[ -z $cmd ]] && { echo "Usage: helpfzf <command>"; return; }

  local help_methods=(
    "--help"
    "-h"
    "help"
    "-help"
    "--usage"
    "-usage"
    "usage"
    "-?"
    "/?"
  )

  local help output longest

  # collect help outputs, pick the longest one
  for h in "${help_methods[@]}"; do
    if command -v "$cmd" >/dev/null 2>&1; then
      output=$("$cmd" "$h" 2>/dev/null)
      [[ ${#output} -gt ${#longest} ]] && longest="$output"
    fi
  done

  [[ -z $longest ]] && { echo "No help found for: $cmd"; return; }

  # clean output: dedupe lines, trim whitespace
  help=$(printf "%s\n" "$longest" | sed 's/^[[:space:]]*//' | awk '!seen[$0]++')

  # fzf interactive search
  local selected
  selected=$(printf "%s\n" "$help" |
             fzf --height=80% \
                 --border \
                 --prompt="help($cmd)> " \
                 --bind='tab:down,btab:up') || return

  [[ -z $selected ]] && return

  # insert selected line into prompt
  READLINE_LINE="$cmd $selected"
  READLINE_POINT=${#READLINE_LINE}
}


#-------------------------------
# chrome
#-------------------------------
updateChrome(){
   cd $HOME
   wget https://dl.google.com/linux/direct/google-chrome-stable_current_amd64.deb
   sudo dpkg -i google-chrome-stable_current_amd64.deb
   rm google-chrome-stable_current_amd64.deb
}

